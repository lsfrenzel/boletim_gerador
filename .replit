modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["freetype", "glibcLocales"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Gerar Boletins"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Interface do Gerador"

[[workflows.workflow]]
name = "Gerar Boletins"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 src/main.py"

[[workflows.workflow]]
name = "Interface do Gerador"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run src/app.py --server.port 5000 --server.address 0.0.0.0"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[deployment]
deploymentTarget = "vm"
run = ["python3", "src/main.py"]

[[ports]]
localPort = 5000
externalPort = 80
